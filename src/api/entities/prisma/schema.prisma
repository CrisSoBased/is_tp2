// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// schema.prisma

// Definição da tabela Nation
model nation {
  id                String      @id @default(uuid()) @db.Uuid
  name              String
  created_on        DateTime    @default(now())
  updated_on        DateTime    @default(now())
  players           player[]
}

// Definição da tabela Club
model club {
  id                String      @id @default(uuid()) @db.Uuid
  name              String
  created_on        DateTime    @default(now())
  updated_on        DateTime    @default(now())
  players           player[]
}

// Definição da tabela Player
model player {
  id                String      @id @default(uuid()) @db.Uuid
  name              String
  age               Int
  overall           Int
  position          String
  pace              Int
  shooting          Int
  passing           Int
  dribbling         Int
  defending         Int
  physicality       Int
  acceleration      Int
  sprint            Int
  positioning       Int
  finishing         Int
  shot              Int
  long              Int
  volleys           Int
  penalties         Int
  vision            Int
  crossing          Int
  free              Int
  curve             Int
  agility           Int
  balance           Int
  reactions         Int
  ball              Int
  composure         Int
  interceptions     Int
  heading           Int
  def               Int
  standing          Int
  sliding           Int
  jumping           Int
  stamina           Int
  strength          Int
  aggression        Int
  att_work_rate     String
  def_work_rate     String
  preferred_foot    String
  weak_foot         Int
  skill_moves       Int
  url               String
  gender            String
  gk                Int?
  nation            nation?     @relation(fields: [id_nation], references: [id])
  id_nation         String?
  club              club?       @relation(fields: [id_club], references: [id])
  id_club           String?
  created_on        DateTime    @default(now())
  updated_on        DateTime    @default(now())
}
